<header
  class="max-w-7xl mx-auto mt-8 rounded-2xl shadow-2xl bg-gradient-to-r from-slate-900 via-blue-900 to-slate-900 text-white py-6 flex justify-between items-center px-12"
>
  <div class="flex items-center gap-6">
    <a
      href="/host"
      class="transition-all duration-300 px-4 py-2.5 rounded-lg font-semibold text-blue-200 hover:scale-105 <%= currentPage === 'HostHomeList' ? 'bg-blue-600 text-white shadow-lg ring-2 ring-blue-400' : 'hover:bg-blue-700/80 hover:text-white' %>"
    >
      <span class="flex items-center gap-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"
          />
        </svg>
        Dashboard
      </span>
    </a>
    <% if(isLoggedIn) { %>
    <div
      class="h-6 w-px bg-gradient-to-b from-transparent via-gray-400 to-transparent"
    ></div>
    <a
      href="/host"
      class="transition-all duration-300 px-4 py-2.5 rounded-lg font-semibold text-blue-200 hover:scale-105 <%= currentPage === 'HostHomeList' ? 'bg-blue-600 text-white shadow-lg ring-2 ring-blue-400' : 'hover:bg-blue-700/80 hover:text-white' %>"
    >
      <span class="flex items-center gap-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"
          />
        </svg>
        My Properties
      </span>
    </a>
    <div
      class="h-6 w-px bg-gradient-to-b from-transparent via-gray-400 to-transparent"
    ></div>
    <a
      href="/host/add-home"
      class="transition-all duration-300 px-4 py-2.5 rounded-lg font-semibold text-blue-200 hover:scale-105 <%= currentPage === 'AddHome' ? 'bg-blue-600 text-white shadow-lg ring-2 ring-blue-400' : 'hover:bg-blue-700/80 hover:text-white' %>"
    >
      <span class="flex items-center gap-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z"
            clip-rule="evenodd"
          />
        </svg>
        Add Property
      </span>
    </a>
    <div
      class="h-6 w-px bg-gradient-to-b from-transparent via-gray-400 to-transparent"
    ></div>
    <a
      href="/host/edit-home"
      class="transition-all duration-300 px-4 py-2.5 rounded-lg font-semibold text-blue-200 hover:scale-105 <%= currentPage === 'EditHome' ? 'bg-blue-600 text-white shadow-lg ring-2 ring-blue-400' : 'hover:bg-blue-700/80 hover:text-white' %>"
    >
      <span class="flex items-center gap-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"
          />
        </svg>
        Edit Property
      </span>
    </a>
  </div>
  <% } %>
  <div>
    <% if (!isLoggedIn) { %>
    <a
      href="/auth/login"
      class="bg-gradient-to-r from-emerald-400 to-blue-500 text-white px-6 py-2.5 rounded-lg font-bold shadow-lg hover:from-emerald-500 hover:to-blue-600 transition-all duration-300 hover:scale-105"
    >
      <span class="flex items-center gap-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M3 3a1 1 0 011 1v12a1 1 0 11-2 0V4a1 1 0 011-1zm7.707 3.293a1 1 0 010 1.414L9.414 9H17a1 1 0 110 2H9.414l1.293 1.293a1 1 0 01-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0z"
            clip-rule="evenodd"
          />
        </svg>
        Login
      </span>
    </a>
    <% } else { %>
    <form action="/auth/logout" method="POST" class="inline">
      <button
        type="submit"
        class="bg-gradient-to-r from-rose-500 to-pink-500 text-white px-6 py-2.5 rounded-lg font-bold shadow-lg hover:from-rose-600 hover:to-pink-600 transition-all duration-300 hover:scale-105"
      >
        <span class="flex items-center gap-2">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              d="M3 3a1 1 0 00-1 1v12a1 1 0 102 0V4a1 1 0 00-1-1zm10.293 9.293a1 1 0 001.414 1.414l3-3a1 1 0 000-1.414l-3-3a1 1 0 10-1.414 1.414L14.586 9H7a1 1 0 100 2h7.586l-1.293 1.293z"
              clip-rule="evenodd"
            />
          </svg>
          Logout
        </span>
      </button>
    </form>
    <% } %>
  </div>
</header>
