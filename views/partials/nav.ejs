<header
  class="bg-gradient-to-r from-gray-900 via-blue-900 to-gray-900 text-white py-4 shadow-lg border-b border-gray-800"
>
  <div class="container mx-auto px-6 flex justify-between items-center">
    <!-- Left side navigation -->
    <div class="flex items-center space-x-8">
      <a
        href="/"
        class="text-blue-400 hover:text-blue-300 transition-colors duration-200 flex items-center gap-2"
      >
        <!-- Home Icon -->
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 inline"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M3 12l2-2m0 0l7-7 7 7m-9 2v6m0 0h4m-4 0a2 2 0 01-2-2V7m6 11a2 2 0 002-2v-6m0 0l2 2"
          />
        </svg>
        <span class="font-semibold">Home List</span>
      </a>

      <% if (isLoggedIn) { %>
      <div class="flex items-center space-x-8">
        <a
          href="/store/favourite-list"
          class="group text-gray-300 hover:text-white transition-all duration-200 flex items-center gap-2 px-3 py-2 rounded-lg hover:bg-gray-800"
        >
          <!-- Heart Icon -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 inline"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4.318 6.318a4.5 4.5 0 016.364 0L12 7.293l1.318-1.318a4.5 4.5 0 116.364 6.364L12 21.293l-7.682-7.682a4.5 4.5 0 010-6.364z"
            />
          </svg>
          <span
            class="font-medium group-hover:translate-x-0.5 transition-transform"
            >Favourite List</span
          >
        </a>

        <a
          href="/store/reserve"
          class="group text-gray-300 hover:text-white transition-all duration-200 flex items-center gap-2 px-3 py-2 rounded-lg hover:bg-gray-800"
        >
          <!-- Calendar Icon -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 inline"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
            />
          </svg>
          <span
            class="font-medium group-hover:translate-x-0.5 transition-transform"
            >Reserve</span
          >
        </a>

        <a
          href="/store/Booking"
          class="group text-gray-300 hover:text-white transition-all duration-200 flex items-center gap-2 px-3 py-2 rounded-lg hover:bg-gray-800"
        >
          <!-- Clipboard List Icon -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 inline"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 17v-2a2 2 0 012-2h2a2 2 0 012 2v2m-6 4h6a2 2 0 002-2V7a2 2 0 00-2-2h-1.586a1 1 0 01-.707-.293l-1.414-1.414A1 1 0 0010.586 3H9a2 2 0 00-2 2v14a2 2 0 002 2z"
            />
          </svg>
          <span
            class="font-medium group-hover:translate-x-0.5 transition-transform"
            >Booking</span
          >
        </a>

        <a
          href="/host"
          class="group text-gray-300 hover:text-white transition-all duration-200 flex items-center gap-2 px-3 py-2 rounded-lg hover:bg-gray-800"
        >
          <!-- User Group Icon -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 inline"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 20h5v-2a4 4 0 00-3-3.87M9 20H4v-2a4 4 0 013-3.87M16 3.13a4 4 0 010 7.75M8 3.13a4 4 0 000 7.75"
            />
          </svg>
          <span
            class="font-medium group-hover:translate-x-0.5 transition-transform"
            >Switch to host</span
          >
        </a>
      </div>
      <% } %>
    </div>

    <!-- Right side authentication -->
    <div class="flex items-center space-x-4">
      <% if (!isLoggedIn) { %>
      <form action="/auth/login" class="inline">
        <button
          type="submit"
          class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2.5 rounded-lg transition-all duration-200 flex items-center gap-2 shadow-md hover:shadow-blue-500/20 hover:-translate-y-0.5"
        >
          <!-- Login Icon -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 inline"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 12h14M12 5l7 7-7 7"
            />
          </svg>
          <span class="font-medium">Login</span>
        </button>
      </form>

      <form action="/auth/signup" class="inline">
        <button
          type="submit"
          class="bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-lg transition-colors duration-200 flex items-center gap-2 shadow-md"
        >
          <!-- User Add Icon -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 inline"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M18 9v6m3-3h-6m-2 4a4 4 0 100-8 4 4 0 000 8zm6 4a6 6 0 10-12 0h12z"
            />
          </svg>
          <span>Sign Up</span>
        </button>
      </form>
      <% } else { %>
      <form action="/auth/logout" method="POST" class="inline">
        <button
          type="submit"
          class="bg-red-600 hover:bg-red-700 text-white px-6 py-2 rounded-lg transition-colors duration-200 flex items-center gap-2 shadow-md"
        >
          <!-- Logout Icon -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 inline"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a2 2 0 01-2 2H7a2 2 0 01-2-2V7a2 2 0 012-2h4a2 2 0 012 2v1"
            />
          </svg>
          <span>Logout</span>
        </button>
      </form>
      <% } %>
    </div>
  </div>
</header>
